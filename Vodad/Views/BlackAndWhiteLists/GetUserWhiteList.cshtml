@model Vodad.Models.BlackAndWhiteListsModel

@{
    ViewBag.Title = "White List";
}

<h2>White List</h2>

@{
    var actions = new List<SelectListItem>
                      {
                          new SelectListItem
                              {
                                  Value = "0",
                                  Text = "Choose action",
                                  Selected = true
                              }, new SelectListItem
                                     {
                                         Value = "1",
                                         Text = "Remove"
                                     }, new SelectListItem
                                            {
                                                Value = "2",
                                                Text = "Add to black list"
                                            }
                      };
}

@using (Html.BeginForm("GetUserWhiteList", "BlackAndWhiteLists", FormMethod.Post))
{

    if (ViewBag.WhiteList.Count > 0)
    {
    @Html.DropDownList("action", actions)
        
    <input type="submit" name="submit" value="Choose action" />
    

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>@Html.CheckBox("action", false, new { @class = "all-actions-checkbox" })</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in ViewBag.WhiteList)
            {
                <tr>
                    <td>@Html.ActionLink((string)u.UserEmail, "Profile", "User", new { id = u.UserId }, htmlAttributes: null)</td>
                    <td>@Html.CheckBox("checkme", false, new { @value = @u.UserId })</td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
    @Html.Raw("There are no users in white list yet.")
    }
}